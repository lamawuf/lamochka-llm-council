# ==============================================
# Lamochka LLM Council - Environment Variables
# ==============================================
# Copy this to .env and fill in your API keys

# OpenRouter (recommended - unified access to all models)
OPENROUTER_API_KEY=sk-or-v1-xxx

# Direct API Keys (optional, used if OpenRouter not available)
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
GOOGLE_API_KEY=xxx
XAI_API_KEY=xai-xxx

# Web Search (for Researcher role)
SERPER_API_KEY=xxx  # Optional, falls back to DuckDuckGo

# Ollama (for local models)
OLLAMA_HOST=http://localhost:11434

# Server Configuration (for FastAPI)
HOST=0.0.0.0
PORT=8000

# Defaults
DEFAULT_PROVIDER=openrouter  # openrouter, openai, anthropic, google, xai, ollama
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=120
